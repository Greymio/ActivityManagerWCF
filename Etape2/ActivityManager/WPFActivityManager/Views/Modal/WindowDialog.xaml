<Control:MetroWindow x:Class="WPFActivityManager.Views.Modal.WindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Control="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="WindowDialog"
        WindowStyle="SingleBorderWindow" 
        WindowStartupLocation="CenterScreen" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="102"></ColumnDefinition>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="/WPFActivityManager;component/images/exclamation.png" Grid.Row="0" Grid.Column="0" Width="102" Height="102"></Image>
        <ContentPresenter x:Name="DialogPresenter" Content="{Binding .}" Grid.Row="0" Grid.Column="1">
        </ContentPresenter>
    </Grid>
</Control:MetroWindow>
